
@{
    ViewBag.Title = "Тест по C#";
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}

@if (Request.Cookies["User"] != null)//если пользователь авторизован
{
    <div class="jumbotron">
        <div class="gb-test-page__left test-control">
            <div class="container footer-stick">
                @using (Html.BeginForm("Result", "Test", new { id = ViewBag.Id }))//передавем id названия выбранного теста
                {
                    Html.AntiForgeryToken();
                 
                    @Html.Raw(ViewBag.html)
                    <div>
                        <input class="btn btn-success" type="submit" value="Проверить результат">
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <h1>Доступ к данной странице имеют только авторизованные пользователи</h1>
}